				button.navbar-toggle.collapsed(type="button",data-toggle="collapse", data-target="#navbar",aria-expanded="false", aria-controls="navbar")
					span.sr-only Toggle nav
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="/admin") Admin
			.navbar-collapse.collapse#navbar
				ul.nav.navbar-nav
					//li.dropdown 
						a.dropdown-toggle(data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") News
							span.caret
						ul.dropdown-menu
							li
								a(href="/admin/news/new") Créer
							li
								a(href="/admin/news/view") Gérer
					li
						a(href="/admin/news") News	
					li.dropdown 
						a.dropdown-toggle(data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") Stockage
							span.caret
						ul.dropdown-menu
							li
								a(href="/admin/storage/view") Gérer
